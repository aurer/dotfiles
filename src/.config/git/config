[core]
	excludesfile = ~/.config/git/ignore
    hooksPath = ~/.config/git/hooks

[init]
	defaultBranch = main

[pull]
	ff = only

[color]
	status = auto
	branch = auto
	interactive = auto
	diff = auto

[format]
    pretty = %C(auto)%h:%an %an %d %s

[alias]
	hide = update-index --assume-unchanged
	unhide = update-index --no-assume-unchanged
	hidden = !git ls-files -v | grep '^[a-z]' | cut -c3-