#!/bin/bash

#########################################################################
# This file is managed centrally, any manual changes might be overwritten
#########################################################################

if tput setaf 1 &> /dev/null; then
  reset=$(tput sgr0);
  bold=$(tput bold);
  pink=$(tput setaf 198);
  violet=$(tput setaf 103);
  blue=$(tput setaf 37);
  cyan=$(tput setaf 72);
  green=$(tput setaf 41);
  yellow=$(tput setaf 172);
  orange=$(tput setaf 202);
  purple=$(tput setaf 164)
  red=$(tput setaf 161);
  black=$(tput setaf 0);
  white=$(tput setaf 15);
  grey=$(tput setaf 245);
else
  reset="\e[0m";
  bold='';
  black="\e[1;30m";
  blue="\e[1;34m";
  cyan="\e[1;36m";
  green="\e[1;32m";
  orange="\e[1;33m";
  purple="\e[1;35m";
  red="\e[1;31m";
  violet="\e[1;35m";
  white="\e[1;37m";
  yellow="\e[1;33m";
  grey="\e[1;33m";
fi;
